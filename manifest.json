{
    "name": "See No Evil",
    "version": "1.0",
    "description": "Detect when a page has bad words!",
    "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"], 
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [ 
            	"jquery-3.3.1.min.js",
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "UNICORN ERASER"
      },
    "options_page": "options.html",
    "manifest_version": 2
}
